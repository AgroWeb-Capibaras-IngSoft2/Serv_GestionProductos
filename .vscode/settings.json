{
    "python.defaultInterpreterPath": "~/miniconda3/envs/agroweb/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Python 3.13 (Global)": {
            "path": "cmd.exe",
            "args": ["/k", "python --version && echo Ready for Python 3.13 development!"],
            "icon": "symbol-misc",
            "color": "terminal.ansiBlue"
        },
        "Anaconda (AgroWeb Service)": {
            "path": "cmd.exe",
            "args": ["/k", "conda activate agroweb && echo âœ… AgroWeb environment activated!"],
            "icon": "symbol-property",
            "color": "terminal.ansiGreen"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.showActions": "always"
}
